<view class="container"><view class="type-nav"><block wx:for="{{types}}" wx:for-item="type" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['switchType',[index]]]]]}}" class="{{['type-item',currentType===index?'active':'']}}" bindtap="__e"><text class="type-text">{{type.name}}</text></view></block></view><scroll-view class="symptom-list" scroll-y="{{true}}"><view class="list-header"><text class="header-title">请选择您的症状程度</text><text class="header-subtitle">点亮星星评分</text></view><block wx:for="{{currentSymptoms}}" wx:for-item="symptom" wx:for-index="index" wx:key="index"><view class="symptom-card"><view class="symptom-name">{{symptom.name}}</view><view class="symptom-score"><view class="stars"><block wx:for="{{6}}" wx:for-item="n" wx:for-index="__i0__" wx:key="*this"><text data-event-opts="{{[['tap',[['updateScore',['$0','$1'],[[['currentSymptoms','',index]],[[6,'',__i0__]]]]]]]}}" class="{{['star',symptom.score>=n*symptom.maxScore/5?'active':'']}}" bindtap="__e">★</text></block></view><text class="score-text">{{symptom.score+"分"}}</text></view></view></block></scroll-view><view class="bottom-button"><button type="primary" data-event-opts="{{[['tap',[['calculateResult',['$event']]]]]}}" bindtap="__e">开始分析</button></view></view>